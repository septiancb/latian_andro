<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="septiancb.geometricalculator.MainActivity">

    <Spinner
        android:id="@+id/geometry"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <EditText
        android:id="@+id/input1"
        android:layout_below="@id/geometry"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_below="@+id/geometry"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input1"
        android:gravity="center"
        android:text="panjang"/>

    <EditText
        android:id="@+id/input2"
        android:layout_below="@id/input1"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/input1"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/input2"
        android:gravity="center"
        android:text="panjang"/>

    <Button
        android:id="@+id/btn_calc"
        android:layout_below="@id/input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        android:onClick="calculate"/>
    <TextView
        android:id="@+id/result"
        android:layout_below="@id/btn_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
