<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="0"
    tools:context="septianfriska.shop_receipt.ShowResult">

    <TableRow>
        <TextView
            android:text="KEYBOARD"/>
        <TextView
            android:id="@+id/KEYBOARD2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/KEYBOARD2_total"
            android:width="100dp"
            android:gravity="right"
            android:text="5000000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="MONITOR"/>
        <TextView
            android:id="@+id/MONITOR2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/MONITOR2_total"
            android:width="100dp"
            android:gravity="right"
            android:text="350000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="LCD"/>
        <TextView
            android:id="@+id/LCD2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/LCD2_total"
            android:width="100dp"
            android:gravity="right"
            android:text="400000"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="CASSING"/>
        <TextView
            android:id="@+id/CASSING2_num"
            android:text="x 0"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/CASSING2_total"
            android:width="100dp"
            android:gravity="right"
            android:text="100000"/>
    </TableRow>

        <TableRow>
            <TextView
                android:text="CPU"/>
            <TextView
                android:id="@+id/CPU2_num"
                android:text="x 0"
                android:paddingRight="20dp"/>
            <TextView
                android:id="@+id/CPU2_total"
                android:width="100dp"
                android:gravity="right"
                android:text="600000"/>
        </TableRow>

    <TableRow
        android:background="@color/colorAccent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Total Pembelian"
            android:layout_span="2"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/grand_total"
            android:width="100dp"
            android:gravity="right"
            android:text="789999"
            android:textStyle="bold"
            android:textSize="15dp"/>

    </TableRow>


</TableLayout>
